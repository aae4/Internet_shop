<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="ru">
	<head>
		<title><%= $title %></title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="keywords" lang="ru" content="<%= $keywords %>" />
		<meta name="description" lang="ru" content="<%= $description %>" />
		<%= stylesheet_link_tag 'scaffold' %>
		<%= stylesheet_link_tag 'login-box' %>
	</head>
	<body>
	<table width="100%" border="0">
	<tr align="center">
		<td colspan="3">
			<div class="users-form"><fieldset><a href="/"><h1>Интернет магазин</h1></a></fieldset></div>
		</td>
	</tr>
	<tr valign="top" >
		<td align="left" ><fieldset >
			<table  align="left" >
			
			<% for catalog in catalogs_list %>
			<tr>
				<td><%=  link_to catalog.name, :controller => 'catalogs', :action => 'show' , :id => catalog.id %></td>
			</tr>
			<% end %>
			<tr>
				<td><%=  link_to "Все товары", :controller => 'goods' %></td>
			<tr>
			</table></fieldset>
		</td>
		<td align="center" width=100% ><fieldset>
			<p style="color: green"><%= flash[:notice] %></p>
						<%= yield  %></fieldset>
		</td>
		<td align="right"><fieldset>
			<% if session[:user] %>
				<b><%= session[:user].login%></b>
				<br />
				<%= link_to 'Личный кабинет', :controller => 'user', :action => 'my_cab' %><br />
				<%= link_to 'Выйти', :controller => 'user', :action => 'logout' %>
			<% else %>
				<%=  link_to  "Вход", :controller => 'user', :action => 'login' %><br />
				<%= link_to 'Регистрация', :controller => 'user', :action => 'new' %>
			<% end %></fieldset>
		</td>
	</tr>
	</table>
	
	</body>
 </html>